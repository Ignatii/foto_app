<h1>Add a comment</h1>

<%= form_for [@parent, @comment] do |f| %>  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', required: true %>
    <%= f.hidden_field :image_id, :value => params[:image_id_comment] %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
