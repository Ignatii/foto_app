<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Photo gallery", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
       <% if current_user %>          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Manage your gallery", current_user %></li>
              <li><%= link_to "Log out", signout_path, id: "sign_out" %></li>
              <% if defined? current_user.insta_token %>
              <% if current_user.insta_token.empty? %>
              <li class="divider"></li>
              <li><%= link_to "Add Your Instagram", "https://api.instagram.com/oauth/authorize/?client_id=#{ENV['INSTA_ID']}&redirect_uri=#{ENV['REDIRECT_INSTA']}/user/1&response_type=token"%></li>
              <% end %>
              <% end %>
            </ul>
          </li>
        <% else %>
          <li class="dropdown">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign In<b class="caret"></b>
            </a>
	  <ul class="dropdown-menu">
              <li><%= link_to "Sign in with Facebook", "/auth/facebook" %></li>
              <li><%= link_to "Sign in with Github", "/auth/github" %></li>
              <li class="divider"></li>    
          </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
