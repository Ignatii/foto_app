<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
    <meta property="og:title" content="Foto Gallery" />
    <meta property="og:image" content="https://medialeaks.ru/wp-content/uploads/2016/09/1-3-1.jpg" />
    <meta property="og:description" content="I liked this foto posted by " />
    <meta property="og:url" content="https://foto-app-ignatiy.herokuapp.com">
  </head>
  <body>
  <% if defined? current_user %>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <div style="clear:both"></div>
      <%= render 'layouts/footer' %>
    </div>
  <% end %>
  </body>
</html>
