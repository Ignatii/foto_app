<% if !current_user %>  
  <div class="center jumbotron">   
    <h1>Welcome to the Sample App</h1>

    <h2>
      This is the home page for the
      <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>
	    <%= link_to '/auth/facebook' , class: "btn-lg btn-block btn-social btn-facebook white-a" do %>
	      <span class="fa fa-facebook"></span>Sign in with Facebook
	    <% end %>
	    <%= link_to '/auth/github' , class: "btn-lg btn-block btn-social btn-github white-a" do %>
	      <span class="fa fa-github"></span>Sign in with Github
	    <% end %>
    
</div>
<% else %>
  <% @images.each do |image| %>
      <div class="row">
  	<div class="col-sm-6 col-md-4">
    	  <div class="thumbnail">
            <%= link_to image_tag(image.image.thumb.url, :alt => image[:id]), {:controller => 'images', :action => 'show', :id => image[:id]} %>
      	  <div class="caption">
            <h3>Will vote for food</h3>
            <p>
	    	<%= link_to "Upvote", like_image_path(image), method: :put , class: "btn btn-xs btn-success center-block" %>
		<%= link_to "Downvote", dislike_image_path(image), method: :put , class: "btn btn-xs btn-danger center-block" %>
            </p>
          </div>
         </div>
       </div>
     </div>      
    </div>
  <% end %>
  </div>
<% end %>
    
