<% provide(:title, current_user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>        
        <%= current_user.name %></h1>  
      
    </section> 
	<%= render 'images/image_form' %>
   </aside>         
   
</div>
<div class="center jumbotron">

	
    <% current_user.images.each do |image| %>
	      <div class="row">
	  	<div class="col-sm-6 col-md-4">
	    	  <div class="thumbnail">
		    <%= link_to image_tag(image.image.thumb.url, :alt => image[:id]), {:controller => 'images', :action => 'show', :id => image[:id]} %>
	      	  <div class="caption">
		    <h3>Votes:<%= image.score %></h3>
		    <p>
		    	<%= link_to "Upvote", like_image_path(image), method: :put , class: "btn btn-xs btn-success center-block" %>
			<%= link_to "Downvote", dislike_image_path(image), method: :put , class: "btn btn-xs btn-danger center-block" %>
		    </p>
		  </div>
		 </div>
	       </div>
	     </div>      
	    </div>
	  <% end %>
</div>
